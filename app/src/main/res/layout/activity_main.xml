<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_ChiaBai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#0978D1"
        android:text="Chia Bài"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/b1fv"/>
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/b1fv"/>
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/b1fv"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textView_KetQua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kết quả"
        android:textAlignment="center"
        android:background="#EF8981"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView_KetQuaMayWin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Máy thắng"/>
        <EditText
            android:id="@+id/edtKetQuaMayWin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="#4CAF50"
            android:text="0"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/b1fv"/>
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/b1fv"/>
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/b1fv"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textView_KetQua1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kết quả"
        android:textAlignment="center"
        android:background="#4CAF50"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView_KetQuaNguoiChoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Người chơi thắng"/>

        <EditText
            android:id="@+id/edtKetQuaNguoiChoiWin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="#4CAF50"
            android:text="0"
            />

    </LinearLayout>


</LinearLayout>